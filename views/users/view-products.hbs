				url:'/add-to-whishlist/'+proId,
				method:'get',
				success:(response)=>{
					if(response.status){
						let count=$('#whish-count').html()
						count=parseInt(count)+1
						$('#whish-count').html(count)
                        	Swal.fire(
						'Item added to Whishlist!',
						'',
						'success'
					)
					}
